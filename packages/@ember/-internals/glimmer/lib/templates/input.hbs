{{~#let (component '-checkbox') (component '-text-field') as |Checkbox TextField|~}}
  {{~#if this.isCheckbox~}}
    <Checkbox @target={{this.caller}} @__ARGS__={{this.args}} ...attributes />
  {{~else~}}
    <TextField @target={{this.caller}} @__ARGS__={{this.args}} ...attributes />
  {{~/if~}}
{{~/let~}}
